\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{main}
\RequirePackage{fontspec,fancyvrb,titlesec,framed}

\pagecolor{solarizedbg}
\color{solarizedfg}

%% custom section
\titleformat{\section}
	{\LARGE \bfseries}
	{}
    {.03\linewidth}
	{}[{\titlerule[0pt]}]
%% custom subsection
\titleformat{\subsection}
    {\Large \bfseries}
	{}
    {.03\linewidth}
	{}[{\titlerule[0pt]}]
%% custom subsubsection
\titleformat{\subsubsection}
    {\large \bfseries}
	{}
    {.03\linewidth}
	{}[{\titlerule[0pt]}]

%% headings position
\titlespacing{\section}{0mm}{5mm}{5mm}
\titlespacing{\subsection}{0mm}{5mm}{5mm}
\titlespacing{\subsubsection}{0pt}{5mm}{5mm}

